<!-- This XUL file template is from https://developer.mozilla.org/en-US/docs/Mozilla/Thunderbird/Thunderbird_extensions/Building_a_Thunderbird_extension_3:_install_manifest
except that this takes into account that the extension is bootstrapped.
-->
<?xml version="1.0"?>
<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns:em="http://www.mozilla.org/2004/em-rdf#">
    <Description about="urn:mozilla:install-manifest">
        <em:id>myfirstext@JN</em:id>
        <em:type>2</em:type>
        <em:name>myfirstext</em:name>
        <em:bootstrap>true</em:bootstrap> <!-- because extension is bootstrapped -->
        <em:version>1.0.0</em:version>
        <em:bootstrap>true</em:bootstrap>
        <em:creator>John N</em:creator>
		<em:description>This is my first extension!</em:description>
        <em:targetApplication>
            <Description>
                <em:id>{3550f703-e582-4d05-9a08-453d09bdfdc6}</em:id>
                <em:minVersion>52.0</em:minVersion>
                <em:maxVersion>64.0</em:maxVersion>
            </Description>
        </em:targetApplication>

		<!-- Localizations -->
		<em:localized>
		  <Description>
			<em:locale>en-US</em:locale>
			<em:name>myfirstext</em:name>
			<em:description>This is my first extension!</em:description>
		  </Description>
		</em:localized>		
    </Description>
</RDF>